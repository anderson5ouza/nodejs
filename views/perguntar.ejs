<body>

    <%- include('partials/navbar.ejs'); %>
    
    <div class="container pt-3">

        <div class="card" id="formulario-pergunta">

            <div class="card-header">
                <h3 class="mt-2 mb-2 text-center">Fazer pergunta</h3>
            </div>
